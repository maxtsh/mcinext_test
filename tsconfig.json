{
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "containers/*": ["app/containers/*"],
      "components/*": ["app/components/*"],
      "seo/*": ["app/seo/*"],
      "utils/*": ["app/utils/*"],
      "layout/*": ["app/layout/*"],
      "routes/*": ["app/routes/*"],
      "hooks/*": ["app/hooks/*"],
      "styles/*": ["app/styles/*"],
      "assets/*": ["app/assets/*"],
      "service/*": ["app/service/*"]
    }
  },
  "include": ["app", "./app/index.d.ts", "vite.config.ts", "vitest.config.ts"],
  "exclude": ["node_modules", "dist"]
}
